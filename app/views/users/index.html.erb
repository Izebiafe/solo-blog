<section class="my-blog bg-secondary bg-gradient">
    <div class="container">
		<!-- section title -->
		<div class="row justify-content-md-center">
			<div class="col-xl-5 col-lg-6 col-md-8">
				<div class="section-title text-center title-ex1">
					<h2>All User Posts</h2>
					<p>Click the User to view Posts</p>
				</div>
			</div>
		</div>
		<!-- section title ends -->
		<div class="row">
			<% @users.each do |user| %>
            	<%= render partial: 'user', locals: { user: user } %>
			<% end %>
		</div>    
	</div>
</section>